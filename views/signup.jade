doctype html
html
	head
		title Shogun
		link(rel="stylesheet" href="stylesheets/signup/index.css")
		link(rel="stylesheet" href="onsenui/css/onsenui.css")
		link(rel="stylesheet" href="onsenui/css/onsen-css-components.min.css")
		link(rel="stylesheet")(href="stylesheets/grid/index.css")
		script(src="onsenui/js/onsenui.min.js")
		meta(name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0")
	body
		section.signup-container
			div.heading
				h1 Regístrate
					br
					small Y busca productos, también hazle publicidad a tu negocio
			div.signup
				form(method="post" name="form" action="/signup")
					ons-row.pd-2
						ons-col.center
							label.form-label(for="name") Nombre
					ons-row.pd-2
						ons-col.center
							ons-input(name="name" input-id="name" modifier="underbar" placeholder="Name" float)
					ons-row.pd-2
						ons-col.center
							label.form-label(for="email") Email
					ons-row.pd-2
						ons-col.center
							ons-input(name="email" input-id="email" modifier="underbar" placeholder="Email" float)
					ons-row.pd-2
						ons-col.center
							label.form-label(for="password") Contraseña
					ons-row.pd-2
						ons-col.center
							ons-input(name="password" type="password" input-id="password" modifier="underbar" placeholder="Contraseña" float)
					ons-row.pd-2
						ons-col.center
							ons-button(modifier="large" onclick="document.getElementsByName('form')[0].submit();") Registrarse
		section.content
			div
				h2 Shogun		
			