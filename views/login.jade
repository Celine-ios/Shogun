doctype html
html
	head
		link(rel="stylesheet" href="stylesheets/login/index.css")
		link(rel="stylesheet" href="onsenui/css/onsenui.css")
		link(rel="stylesheet" href="onsenui/css/onsen-css-components.min.css")
		script(src="onsenui/js/onsenui.min.js")
		meta(name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0")
		title Zellet
	body
		section.content
			div
				h1 Inicia Sesión 
					br
					small Y empieza a Buscar Productos en tu localidad desde la comodidad de tu casa
		section.content(style="margin-top: 0;")
			div.login-box
				form(action="/login")(method="post")(name="form")
					ons-row(style="margin: 4% 0%;")
						ons-col(style="display: flex; flex-direction: column; align-items: center;")
							label.form-label(for="email") Email
							ons-input(type="email")(placeholder="Email")(maxlength="20")(input-id="email")(underbar)(name="email")
					ons-row(style="margin: 4% 0%;")
						ons-col(style="display: flex; flex-direction: column; align-items: center;")
							label.form-label(for="password") Contraseña
							ons-input(type="password")(placeholder="Contraseña")(maxlength="20")(underbar)(input-id="password")(name="password")
					ons-row(style="margin: 4% 0%;")
						ons-col(style="display: flex; justify-content: center;")
							//ons-button(onclick="ons.notification.alert('Qlq');")(modifier="large") Iniciar Sesión
							ons-button(type="submit")(modifier="large")(onclick="document.getElementsByName('form')[0].submit();") Iniciar Sesión
					ons-row(style="margin: 1% 0%;")
						ons-col(style="display: flex; justify-content: center;")
							ons-toolbar-button Olvidé mi Contraseña
		section.content
			div
				h2 Shogun